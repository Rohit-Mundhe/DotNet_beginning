@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
<br>

<table style="width:100%; border:solid; border-collapse:collapse">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display order
            </th>
            <th>
                Date on which created
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>@item.CreatedTime</td>
            </tr>
        }
    </tbody>
</table>
</div>